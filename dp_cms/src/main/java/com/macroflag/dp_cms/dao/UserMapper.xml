<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.macroflag.dp_cms.dao.UserDAO">
	<select id="findByUser" parameterType="com.macroflag.dp_cms.vo.UserModel"
		resultType="com.macroflag.dp_cms.vo.UserModel">
		select id,username from dp_user where username = #{username} and password = #{password}
	</select>
	<insert id="create" parameterType="MDM">
		insert into
		dp_metadata(dpaUuid,time,domain,url,screenHeight,screenWidth,os,browserVersion,eventName,eXPath)
		values(#{dpaUuid},#{time},#{domain},#{url},#{screenHeight},#{screenWidth},#{os},#{browserVersion},#{eventName},#{eXPath})
	</insert>
	<update id="update" parameterType="CM">
		update tbl_customer set
		customerId=#{customerId},pwd=#{pwd},
		showName=#{showName},trueName=#{trueName},registerTime=#{registerTime}
		where uuid=#{uuid}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from tbl_customer where
		uuid=#{uuid}
	</delete>
	
	<delete id="deleteAll" parameterType="int">
		delete from tbl_customer where
		uuid=#{uuid}
	</delete>
	
	<select id="getByCondition" parameterType="com.macroflag.dp_cms.vo.UserModel"
		resultType="com.macroflag.dp_cms.vo.UserModel">
		select * ,(select count(*) from dp_metadata) count from dp_metadata
		<where>
			<if test="dpaUuid">
				and $dpa_uuid=#{dpaUuid}
			</if>
		</where>
		order by id desc
		<choose>
			<when test="page >1 and limit >0">
				limit #{page},#{limit}
			</when>
			<when test="page ==1 and limit >0">
				limit 0,#{limit}
			</when>
		</choose>
	</select>
	
</mapper>